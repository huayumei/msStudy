/* pages/detail/detail.wxss */
.ans{
  padding: 20rpx 40rpx;
}
.ans_num{
  text-align: center;
  margin-bottom: 20rpx;
}
.ans_item .radio{
  display: block;
  margin: 30rpx 0;
}
.ans_video{
  margin-top: 100rpx;
}
.ans_video video{
  width: 100%
}
.nextBtn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #3badeb;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
rich-text{
  display: inline-block
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5)
}
.ans_video{
  width: 80%;
  position: absolute;
  top: 10vh;
  left: 10%;
  background: #fff;
  text-align: center;
}
.ans_video video{
  vertical-align: middle;
}
.videoNextBtn{
  width: 120rpx;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #3badeb;
  color: #fff;
  position: absolute;
  bottom: -140rpx;
  left: 50%;
  margin-left: -60rpx;
}