<!--pages/user/user.wxml-->
<view class="container">
  <view class="user">
    <view class="userInfo">
      <view class="userInfoL">
        <image class="user_img" src="{{user.avatarUrl}}"></image>
        <view class="user_name">{{user.nickName}}</view>
      </view>
    </view>
  </view>
  <view class="list">
    <view class="listItem" bindtap="detail" data-detail="{{item}}" wx:for="{{listArr}}">
      <view class="listL">
        <view class="className">{{item.name}}</view>
        <view class="classMoney">连续打卡天数：{{item.signCount}}天</view>
      </view>
      <view class="listR">
        <rich-text nodes="{{item.courseImage}}"></rich-text>
      </view>
    </view>
  </view>
</view>
