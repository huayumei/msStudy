<!--pages/user/user.wxml-->
<view class="container">
  <view class="user">
    <view class="userInfo">
      <view class="userInfoL">
        <image class="user_img" src="{{user.avatarUrl}}"></image>
        <view class="user_name">{{user.nickName}}</view>
      </view>
      <view class="userInfoR">
        <button bindtap="bindClass" class="loginBtn">绑定课程</button>
      </view>
    </view>
  </view>
  <view class="list">
    <view class="listItem" bindtap="detail" data-detail="{{item}}" wx:for="{{listArr}}">
      <view class="listL">
        <view class="className">{{item.name}}</view>
        <view class="classMoney">连续打卡天数：{{item.cardNum}}天</view>
      </view>
      <view class="listR">
        <rich-text nodes="{{item.courseImag}}"></rich-text>
        <!-- <image src="{{item.courseImage}}"></image> -->
      </view>
    </view>
  </view>
  <view class="mask" wx:if="{{bindState}}">
    <view class="bindContent">
      <view class="input_item">
        <label>手机号：</label>
        <input type="number" class="tel" value="{{tel}}" bindinput="bindInput" data-value="{{'tel'}}" placeholder="请输入手机号"></input>
      </view>
      <view class="input_item">
        <label>密码：</label>
        <input type="number" class="tel" value="{{password}}" bindinput="bindInput" data-value="{{'password'}}" placeholder="请输入密码"></input>
      </view>
      <view class="currentBtn" bindtap="current">确定</view>
    </view>
  </view>
</view>
