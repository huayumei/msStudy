/* pages/class/detail/detail.wxss */
.class_img{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
.class_img image{
  width: 100%;
}
.detail{
  background: #fff;
  height: calc(100vh - 400rpx);
  padding: 0 20rpx;
  overflow: hidden;
}
.class_title{
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0;
}
.class_money{
  font-size: 42rpx
}
.small{
  font-size: 24rpx;
}
.pay_btn{
  position: fixed;
  bottom: 40rpx;
  left: 10%;
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5)
}
.bindContent{
  width: 80%;
  position: absolute;
  top: 10vh;
  left: 10%;
  background: #fff;
  text-align: center;
  padding: 40rpx 0;
  border-radius: 20rpx;
}
.bindContent image{
  width: 457rpx;
  height: 558rpx;
}
.currentBtn{
  width: 120rpx;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #3badeb;
  color: #fff;
  position: absolute;
  bottom: -140rpx;
  left: 50%;
  margin-left: -60rpx;
}